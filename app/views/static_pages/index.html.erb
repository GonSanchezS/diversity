<div class="container hero">
  <div class="columns text-center">
    <div class="column col-xs-12 col-xl-6 col-mx-auto">   
      <h1 class="main--title">Diversity in fast-growing technology companies</h1>
      <p class="main--description">We looked into gender and race diversity in 150 top growing technology companies like <span id="companies" class="label">Buffer</span>.</p>
      <a class="btn btn-primary">See the rankings</a>
      <a href="https://airtable.com/invite/l?inviteId=invFcqQ0afo9VfuKj&inviteToken=d125c8ed26505f8bc339c08b3374d0d0" class="btn">Download raw data</a>
    </div>
  </div>


  <script>

var text = ["Mattermark", "Zapier", "Doist", "Airtable", "Bonsai", "Gusto", "AdEspresso"];
var counter = 0;
var elem = document.getElementById("companies");
setInterval(change, 1000);

function change() {
  elem.innerHTML = text[counter];
  counter++;
  if (counter >= text.length) {
    counter = 0;
  }
}

</script>

    <div class="clearfix"/></div>

  <div class="columns company--section" sheetsu='https://sheetsu.com/apis/v1.0/73162961a1d4'>

        <div class="column col-xl-3 col-lg-4 col-md-6 col-xs-12 company--profile">   
          <div class="company--profile--card">
            <h5 class="company--title">{{company}}</h5>
            <a href="{{url}}" class="company--link">🔗</a>
            <p class="company--rank">#{{ranking}}</p>
            <div class="clearfix"></div>

            <div class="columns">
              <div class="column col-xs-4"><p class="company--score--icon">👩‍👧‍👧</p><p class="company--score">{{gender}}</p><p class="company--score--description">Gender</p></div>
              <div class="column col-xs-6"><p class="company--score--icon">👩‍👧‍👧</p><p class="company--score">{{race}}</p><p class="company--score--description">Race</p></div>
            </div>
            <div class="clearfix"></div>
            <span class="tag--size">{{size}}</span><span class="tag--remote">{{remote}}</span>
          </div>
      </div> 

  </div>



</div>
  <script src='//load.sheetsu.com'></script>
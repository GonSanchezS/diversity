  <script>
  $( function() {
    $( "#tabs" ).tabs();
  } );
</script>

  <script>

var text = ["Mattermark", "Zapier", "Doist", "Airtable", "Bonsai", "Gusto", "AdEspresso", "Buffer"];
var counter = 0;
var elem = document.getElementById("companies");
setInterval(change, 1000);

function change() {
  elem.innerHTML = text[counter];
  counter++;
  if (counter >= text.length) {
    counter = 0;
  }
}

</script>

<div class="clearfix"/></div>

      <div class="column col-xs-12 col-md-12 col-lg-8 col-xl-6 col-mx-auto">


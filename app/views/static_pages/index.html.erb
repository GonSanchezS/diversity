            <%= image_tag('race-02-46x46.png', size: '24') %>  <span class="score--name">Race Score</span>
          </div>
          <div class="chip">
            <%= image_tag('race-46x46.png', size: '24') %>  <span class="score--name">Diversity Index</span>
          </div>
        </div>

    
      <div class="column" sheetsu='https://sheetsu.com/apis/v1.0/73162961a1d4' id="london" sheetsu-sheet="Copy of Value"> 


